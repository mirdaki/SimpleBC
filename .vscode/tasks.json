{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "cd src/; java -Xmx500M -cp '/usr/local/lib/antlr-4.7.1-complete.jar:$CLASSPATH' org.antlr.v4.Tool SimpleBC.g4; javac -cp '/usr/local/lib/antlr-4.7.1-complete.jar:$CLASSPATH' SimpleBC*.java",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "Test",
			"type": "shell",
			"command": "cd src/; ./test-all.sh",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "Clean Src",
			"type": "shell",
			"command": "find src/ -type f -not -name 'SimpleBC.g4' -not -name 'test-all.sh' -delete",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		}
	]
}
